<?xml version="1.0" encoding="utf-8"?>

<!--Taken from https://tips.androidhive.info/2013/09/android-layout-rounded-corner-border/-->

<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- view background color -->
    <solid
        android:color="#E6F8F1" >
    </solid>

    <corners
        android:radius="35dp"   >
    </corners>

    <shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

        <!-- view background color -->
        <solid
            android:color="#FFFFFF" >
        </solid>


        <!-- If you want to add some padding -->
        <padding
            android:left="12dp"
            android:top="12dp"
            android:right="12dp"
            android:bottom="12dp"    >
        </padding>

        <!-- Here is the corner radius -->
        <corners
            android:radius="35dp"   >
        </corners>

    </shape>

</shape>

